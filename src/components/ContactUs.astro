---
import { Image } from "astro:assets";
import ArqDesign from "../assets/images/arq_design.webp";
import emailjs from "@emailjs/browser";
---

<section class="w-full py-14 md:px-38" id="contact">
    <div class="grid grid-cols-5 grid-rows-5 gap-4 mx-5">
        <div class="col-span-2 row-span-5">
            <h1
                class="text-xl md:text-4xl text-secondary font-semibold w-full md:w-[737px] leading-[1.5]"
            >
                Cont√°ctanos si <br /> tienes alguna <br /> pregunta.
            </h1>
            <div class="flex flex-col mt-16">
                <div class="flex flex-col gap-4">
                    <input
                        type="text"
                        id="name"
                        class="border border-secondary rounded-md p-2 w-full md:w-[354px] h-[50px]"
                        placeholder="Nombre"
                    />
                </div>
                <div class="flex flex-col gap-4 mt-5">
                    <input
                        type="email"
                        id="email"
                        class="border border-secondary rounded-md p-2 w-full md:w-[354px] h-[50px]"
                        placeholder="Correo Electronico"
                    />
                </div>
                <div class="flex flex-col gap-4 mt-5">
                    <textarea
                        id="message"
                        rows="4"
                        class="border border-secondary rounded-md p-2 w-full md:w-[354px]"
                        placeholder="Mensaje"></textarea>
                </div>
                <button
                    type="submit"
                    class="bg-secondary text-white rounded-md p-2 w-full md:w-[354px] h-[50px] mt-8 cursor-pointer"
                    id="submitBtn"
                    value="send"
                >
                    Enviar mensaje
                </button>
            </div>
        </div>
        <div
            class="row-span-5 col-start-3 min-w-[454px] hidden md:block justify-end"
        >
            <Image
                class="w-auto h-auto shadow-lg rounded-md opacity-70"
                src={ArqDesign}
                alt="Plano arquitectonico de una casa"
                loading="lazy"
            />
            <Image
                class="w-auto h-auto shadow-lg rounded-md opacity-70"
                src={ArqDesign}
                alt="Plano arquitectonico de una casa"
                loading="lazy"
            />
        </div>
    </div>
</section>
